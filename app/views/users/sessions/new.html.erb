<div class="row ">
  <div class="col-md-4"></div>
  <div class="col-lg-3 col-md-4">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name, class: "form-user")) do |f| %>
  <div class="field">
    <%= f.label :email, class: 'sr-only' %><br /><i class="glyphicon glyphicon-user"></i>
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password %><br /><i class="glyphicon glyphicon-user"></i>
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
  </div>

        <%= render "users/shared/links" %>
<% end %>
  </div>
  <div class="col-md-4"></div>
</div>
