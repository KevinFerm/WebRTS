<div class="row ">
  <div class="col-md-4"></div>
  <div class="col-lg-3 col-md-4">
    <h2>Register</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name, class: "form-user")) do |f| %>
        <div class="field">
          <%= f.label :email, class: 'sr-only' %><br /><i class="glyphicon glyphicon-user"></i>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password %><br /><i class="glyphicon glyphicon-user"></i>
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Register", class: "btn btn-lg btn-primary btn-block" %>
        </div>

        <%= render "users/shared/links" %>
    <% end %>
  </div>
  <div class="col-md-4"></div>
</div>
